<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dp"
        android:padding="3dp"
        android:visibility="visible"/>




    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/id"
        android:textSize="17sp"
        android:textStyle="bold"
        android:padding="3dp"
        android:visibility="visible"
         />


    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/last_name"
        android:layout_width="fill_parent"
        android:layout_below="@+id/first_name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"

        />



    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/date_of_birth"
        android:layout_width="fill_parent"
        android:layout_below="@+id/last_name"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:layout_width="fill_parent"
        android:layout_below="@+id/date_of_birth"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
       />


    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/postal_address"
        android:layout_width="fill_parent"
        android:layout_below="@+id/gender"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
       />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/email_address"
        android:layout_width="fill_parent"
        android:layout_below="@+id/postal_address"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/contact_number"
        android:layout_width="fill_parent"
        android:layout_below="@+id/email_address"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/next_of_kin"
        android:layout_width="fill_parent"
        android:layout_below="@+id/contact_number"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/contact_next_of_kin"
        android:layout_width="fill_parent"
        android:layout_below="@+id/next_of_kin"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
     />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/faculty"
        android:layout_width="fill_parent"
        android:layout_below="@+id/contact_number"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />

    <TextView

        android:layout_height="wrap_content"
        android:id="@+id/programme"
        android:layout_width="fill_parent"
        android:layout_below="@+id/faculty"
        android:textSize="17sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:padding="3dp"
        />




</RelativeLayout>